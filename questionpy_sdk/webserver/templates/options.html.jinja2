{% extends "page.html.jinja2" %}
{% import "macros.jinja2" as macros %}

{% block title %}{{ manifest.short_name }}{%  endblock %}
{% block header %}
    <h1>Adding a {{ manifest.short_name }} Question</h1>
{% endblock %}

{% block content %}
    <div class="container-manifest">
        <p class="manifest-version">Version: {{ manifest.version }}</p>
        <p class="manifest-apiversion">API Version: {{ manifest.api_version }}</p>
    </div>

    <form action="/submit" id="options_form">
        {{ macros.create_section("general", "General", options.general, form_data) }}
        {% for section in options.sections %}
            {{ macros.create_section(section.name, section.header, section.elements, form_data) }}
        {% endfor %}
        <input type="submit" value="Save changes">
        <a hidden="true" id="submit_success_info">Saved!</a>
    </form>
{% endblock %}