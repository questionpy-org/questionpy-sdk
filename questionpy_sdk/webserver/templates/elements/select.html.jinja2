{% extends "elements/element.html.jinja2" %}

{% block content %}
   <select class="answer-{{ element_options.kind }}" name="{{ element_options.name }}">
        {% if not element_options.required %}
            <option value="">--Please choose an option--</option>
        {% endif %}
        {% for option in element_options.options %}
            <option value="{{ option.value }}" {{ 'selected' if option.selected }}
            id="{{ element_options.name ~ "-" ~ option.value }}">
                {{ option.label }}
            </option>
        {% endfor %}
   </select>
{% endblock %}